<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/height_item_friend_img"
            android:src="@drawable/exz"
            android:id="@+id/img_talk_head_left"
            android:layout_height="@dimen/height_item_friend_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ll_talk_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Ron"
                android:id="@+id/tv_talk_name"
                android:textColor="#666666"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll_bg"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Ron"
                android:id="@+id/tv_talk_content"
                android:padding="@dimen/activity_vertical_margin"
                android:textColor="#666666"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
             <ImageView
                 android:layout_width="90dp"
                 android:id="@+id/iv_img"
                 android:clickable="true"
                 android:scaleType="fitCenter"
                 android:layout_height="90dp" />

                <ImageView
                    android:id="@+id/chat_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/chat_voice_playing3" />

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#666666">

                </LinearLayout>-->
        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/height_item_friend_img"
            android:src="@drawable/exz"
            android:id="@+id/img_talk_head_right"
            android:layout_height="@dimen/height_item_friend_img" />
    </LinearLayout>
</LinearLayout>