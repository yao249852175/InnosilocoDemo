<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/title_bar_color" >

    <ImageButton
        android:id="@+id/title_bar_back_btn"
        android:layout_width="47dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/title_bar_back_bnt_bg_stly"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/title_bar_back_btn_style" />

    <TextView
        android:id="@+id/tile_bar_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="标题栏"
        android:textColor="@color/white"
        android:textSize="19sp" />
	<ProgressBar 
	    android:id="@+id/tile_bar_title_pb"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/tile_bar_title_txt"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:gravity="center_vertical"/>
	<TextView
	    android:id="@+id/tile_bar_title_count"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/tile_bar_title_txt"
        android:gravity="top|right"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:textColor="#ff0000"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/title_bar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/title_bar_back_bnt_bg_stly"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="保存"
        android:textColor="@drawable/title_bar_right_btn_txt_color"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/title_bar_right_second_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="64dp"
        android:background="@null"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/head_call_btn_style"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_bar_right_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:contentDescription="@string/empty_string"
        android:visibility="gone" />

</RelativeLayout>